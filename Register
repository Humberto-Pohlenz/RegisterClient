# Função para validar o email
def validar_email(email):
    email = email.strip()  # Remover espaços em branco no início e no final do email
    if email.count('@') == 1:  # Verificar se há exatamente uma ocorrência de '@'
        nomeEmail, dominioEmail = email.split('@')
        if 3 <= len(nomeEmail) <= 15:  # Verificar o comprimento do nome do email
            if '.' in dominioEmail:  # Verificar se há pelo menos um ponto no domínio
                nomeDominio, extensao = dominioEmail.split('.')
                if len(nomeDominio) >= 3 and len(extensao) >= 2:  # Verificar o comprimento do nome do domínio e extensão
                    return True
    return False

# Função para cadastrar um novo cliente
def cadastrar_cliente():
    nome_completo = input("Digite o nome completo: ")
    while len(nome_completo.split()) < 2 or len(nome_completo.split()[0]) < 3:
        print("Nome inválido. Deve ter nome e sobrenome, e o primeiro nome deve ter pelo menos 3 caracteres.")
        nome_completo = input("Digite o nome completo: ")

    ano_nascimento = int(input("Digite o ano de nascimento: "))
    while ano_nascimento < 1943 or ano_nascimento > 2005:
        print("Ano de nascimento inválido. Deve estar entre 1943 e 2005.")
        ano_nascimento = int(input("Digite o ano de nascimento: "))

    sexo = input("Digite o sexo (M/F): ").upper()
    while sexo not in ('M', 'F'):
        print("Sexo inválido. Digite M para masculino ou F para feminino.")
        sexo = input("Digite o sexo (M/F): ").upper()

    cpf = input("Digite o CPF (apenas números, 11 dígitos): ")
    while not cpf.isdigit() or len(cpf) != 11:
        print("CPF inválido. Deve conter apenas números e ter 11 dígitos.")
        cpf = input("Digite o CPF (apenas números, 11 dígitos): ")

    email = input("Digite o email: ")
    while not validar_email(email):
        print("Email inválido. Deve seguir o formato 'nome@dominio.com'.")
        email = input("Digite o email: ")

    telefone = input("Digite o telefone (apenas números, no mínimo 10 dígitos): ")
    while not telefone.isdigit() or len(telefone) < 10:
        print("Telefone inválido. Deve conter apenas números e ter no mínimo 10 dígitos.")
        telefone = input("Digite o telefone (apenas números, no mínimo 10 dígitos): ")

    # Armazenar as informações em uma lista
    cliente = [nome_completo, ano_nascimento, sexo, cpf, email, telefone]
    return cliente

# Lista para armazenar os clientes
clientes = []

# Cadastro de clientes
while True:
    cliente = cadastrar_cliente()
    clientes.append(cliente)

    continuar = input("Deseja cadastrar outro cliente? (S/N): ").upper()
    if continuar != 'S':
        break

# Impressão da lista de clientes
print("\nLista de clientes cadastrados:")
for cliente in clientes:
    print("Nome:", cliente[0])
    print("Ano de Nascimento:", cliente[1])
    print("Sexo:", cliente[2])
    print("CPF:", cliente[3])
    print("Email:", cliente[4])
    print("Telefone:", cliente[5])
    print()
